<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	
	<modelVersion>4.0.0</modelVersion>
	
	<parent>
		<artifactId>exemplo2-jee5</artifactId>
		<groupId>br.gov.serpro</groupId>
		<version>1.0.0-SNAPSHOT</version>
	</parent>
	
	<groupId>br.gov.serpro</groupId>
	<artifactId>exemplo2-jee5-app</artifactId>
	<version>1.0.0-SNAPSHOT</version>
	<packaging>ear</packaging>
	
	<name>Exemplo2 JEE 5 - Application</name>
	<description>MÃ³dulo Application</description>
	
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-ear-plugin</artifactId>
				<version>2.5</version>
				<configuration>
					<archive>
						<manifest>
							<addClasspath>true</addClasspath>
						</manifest>
					</archive>
					<defaultLibBundleDir>lib</defaultLibBundleDir>
					<modules>
						<jarModule>
							<groupId>br.gov.serpro</groupId>
							<artifactId>exemplo2-jee5-common</artifactId>
							<bundleDir>/</bundleDir>
							<includeInApplicationXml>true</includeInApplicationXml>
						</jarModule>
						<ejbModule>
							<groupId>br.gov.serpro</groupId>
							<artifactId>exemplo2-jee5-ejb</artifactId>
						</ejbModule>
					</modules>
				</configuration>
			</plugin>			
		</plugins>
	</build>
	
	<dependencies>
		<dependency>
			<groupId>br.gov.serpro</groupId>
			<artifactId>exemplo2-jee5-ejb</artifactId>
			<version>1.0.0-SNAPSHOT</version>
			<type>ejb</type>
		</dependency>
		<dependency>
			<groupId>br.gov.serpro</groupId>
			<artifactId>exemplo2-jee5-common</artifactId>
			<version>1.0.0-SNAPSHOT</version>
		</dependency>		
	</dependencies>
	
</project>