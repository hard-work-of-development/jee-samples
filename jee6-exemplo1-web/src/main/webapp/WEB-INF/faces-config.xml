<?xml version="1.0" encoding="UTF-8"?>
<faces-config
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
    version="2.0">
    
	<application>
		<locale-config>
			<default-locale>pt-BR</default-locale>
		</locale-config>
	</application>
	
	<managed-bean>
		<managed-bean-name>login</managed-bean-name>
		<managed-bean-class>tirando.onda.jee.web.faces.Login</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
		<managed-property>
			<property-name>sucessPageRedirect</property-name>
			<value>default</value>
		</managed-property>
	</managed-bean>

	<navigation-rule>
		<navigation-case>
			<from-outcome>default</from-outcome>
			<to-view-id>/pages/default.xhtml</to-view-id>
			<redirect/>
		</navigation-case>
	</navigation-rule>

</faces-config>
