	<groupId>tirando.onda.jee</groupId>
	<artifactId>jee5-exemplo1-app</artifactId>
	<version>1.0.0-SNAPSHOT</version>
	<packaging>ear</packaging>
	
	<name>JEE 5 Exemplo 1 - Application</name>
	<description>JEE 5 Exemplo 1 - Application</description>
	
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-ear-plugin</artifactId>
				<version>2.5</version>
				<configuration>
					<defaultLibBundleDir>lib</defaultLibBundleDir>
					<version>5</version>
					<encoding>${encoding.default}</encoding>
					<modules>
						<ejbModule>
							<groupId>tirando.onda.jee</groupId>
							<artifactId>jee5-exemplo1-ejb</artifactId>
						</ejbModule>
						<jarModule>
							<groupId>tirando.onda.jee</groupId>
							<artifactId>jee5-exemplo1-client</artifactId>
							<bundleDir>/</bundleDir>
							<includeInApplicationXml>true</includeInApplicationXml>							
						</jarModule>
						<webModule>
							<groupId>tirando.onda.jee</groupId>
							<artifactId>jee5-exemplo1-web</artifactId>
							<contextRoot>/jee5-exemplo1-web</contextRoot>
						</webModule>
					</modules>
				</configuration>
