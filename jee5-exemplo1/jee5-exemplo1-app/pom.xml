<!-- 						</configuration> -->
<!-- 					</execution> -->
<!-- 				</executions> -->
			</plugin>			
		</plugins>
	</build>
	
	<dependencies>
		<dependency>
			<groupId>tirando.onda.jee</groupId>
			<artifactId>jee5-exemplo1-ejb</artifactId>
			<version>1.0.0-SNAPSHOT</version>
			<type>ejb</type>
		</dependency>
		<dependency>
			<groupId>tirando.onda.jee</groupId>
			<artifactId>jee5-exemplo1-client</artifactId>
			<version>1.0.0-SNAPSHOT</version>
			<type>jar</type>
		</dependency>
		<dependency>
			<groupId>tirando.onda.jee</groupId>
			<artifactId>jee5-exemplo1-web</artifactId>
			<version>1.0.0-SNAPSHOT</version>
			<type>war</type>
		</dependency>
	</dependencies>
	
</project>
