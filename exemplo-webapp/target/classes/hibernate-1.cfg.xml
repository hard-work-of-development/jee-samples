<?xml version="1.0" encoding="UTF-8"?><!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"	"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd"><hibernate-configuration>  <session-factory>        <property name="connection.datasource">java:XADerby1DS</property>    
    <property name="hibernate.dialect">org.hibernate.dialect.DerbyDialect</property>
	<!-- property name="hbm2ddl.auto">create</property -->	<property name="show_sql">true</property>	<property name="format_sql">true</property>	    <property name="hibernate.transaction.factory_class">org.hibernate.transaction.JTATransactionFactory</property>	<property name="hibernate.transaction.manager_lookup_class">org.hibernate.transaction.JBossTransactionManagerLookup</property>	<property name="hibernate.current_session_context_class">jta</property>	     <mapping class="br.gov.serpro.exemplo.webapp.bean.Contato"/>      </session-factory></hibernate-configuration>